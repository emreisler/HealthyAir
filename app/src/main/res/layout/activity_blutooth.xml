<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlutoothActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="312dp">

        <Button
            android:id="@+id/search_blutooth_devices_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEARCH FOR DEVICES"
            android:layout_margin="20dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="30dp"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/deviceFound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Device Found : " />

                <TextView
                    android:id="@+id/meas1Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Measurement 1 : " />

                <TextView
                    android:id="@+id/meas2Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Measurement 2 : " />

                <TextView
                    android:id="@+id/meas3Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Measurement 3 : " />

                <TextView
                    android:id="@+id/meas4Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Measurement 4 : " />
                <TextView
                    android:id="@+id/meas5Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Measurement 5 : " />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/get_measurements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET AIR MEASUREMENTS"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/next_to_map_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/back_to_name_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>